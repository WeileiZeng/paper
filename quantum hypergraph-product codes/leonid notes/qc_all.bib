@article{Xia-Sun-Zhang-Pan-2018,
  author =	 {Xiu-Xiu Xia and Qi-Chao Sun and Qiang Zhang and
                  Jian-Wei Pan},
  title =	 {Long distance quantum teleportation},
  journal =	 {Quantum Science and Technology},
  volume =	 3,
  number =	 1,
  pages =	 014012,
  url =		 {http://stacks.iop.org/2058-9565/3/i=1/a=014012},
  year =	 2018,
  abstract =	 {Quantum teleportation is a core protocol in quantum
                  information science. Besides revealing the
                  fascinating feature of quantum entanglement, quantum
                  teleportation provides an ultimate way to distribute
                  quantum state over extremely long distance, which is
                  crucial for global quantum communication and future
                  quantum networks. In this review, we focus on the
