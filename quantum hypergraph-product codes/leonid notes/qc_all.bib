  numpages =	 {5},
  year =	 {2013},
  month =	 {Aug},
  doi =		 {10.1103/PhysRevLett.111.080502},
  url =
                  {http://link.aps.org/doi/10.1103/PhysRevLett.111.080502},
  publisher =	 {American Physical Society},
  annote =	 {We demonstrate a planar, tunable superconducting
                  qubit with energy relaxation times up to
                  44â€‰â€‰Î¼s. This is achieved by using a geometry
                  designed to both minimize radiative loss and reduce
                  coupling to materials-related defects. At these
