  url =		 {http://link.aps.org/doi/10.1103/PhysRevA.90.042326},
  annote =	 {We define and study parafermion stabilizer codes,
                  which can be viewed as generalizations of Kitaev's
                  one-dimensional (1D) model of unpaired Majorana
                  fermions. Parafermion stabilizer codes can protect
                  against low-weight errors acting on a small subset
                  of parafermion modes in analogy to qudit stabilizer
                  codes. Examples of several smallest parafermion
                  stabilizer codes are given. A locality-preserving
                  embedding of qudit operators into parafermion
                  operators is established that allows one to map
                  known qudit stabilizer codes to parafermion
                  codes. We also present a local 2D parafermion
                  construction that combines topological protection of
                  Kitaev's toric code with additional protection
                  relying on parity conservation.}
}


  	
@article{Bravyi-Terhal-Leemhuis-2010,
  author =	 {Sergey Bravyi and Barbara M. Terhal and Bernhard
                  Leemhuis},
  title =	 {Majorana fermion codes},
  journal =	 {New Journal of Physics},
  volume =	 12,
  number =	 8,
  pages =	 083039,
  url =		 {http://stacks.iop.org/1367-2630/12/i=8/a=083039},
  year =	 2010,
  abstract =	 {We initiate the study of Majorana fermion codes
                  (MFCs). These codes can be viewed as extensions of
                  Kitaev's one-dimensional (1D) model of unpaired
                  Majorana fermions in quantum wires to higher spatial
                  dimensions and interacting fermions. The purpose of
                  MFCs is to protect quantum information against
                  low-weight fermionic errors, that is, operators
                  acting on sufficiently small subsets of fermionic
                  modes. We examine to what extent MFCs can surpass
                  qubit stabilizer codes in terms of their stability
                  properties. A general construction of 2D MFCs is
                  proposed that combines topological protection based
                  on a macroscopic code distance with protection based
                  on fermionic parity conservation. Finally, we use
                  MFCs to show how to transform any qubit stabilizer
                  code to a weakly self-dual CSS code.}
}
	

@article{Fujiwara-2014,
  title =	 {Ability of stabilizer quantum error correction to
                  protect itself from its own imperfection},
  author =	 {Fujiwara, Y.},
