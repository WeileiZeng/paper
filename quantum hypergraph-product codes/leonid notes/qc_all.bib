@Article{Geller-Pritchett-Galiautdinov-Martinis-2010,
  title =	 {Quantum logic with weakly coupled qubits},
  author =	 {Geller, Michael R. and Pritchett, Emily J. and
                  Galiautdinov, Andrei and Martinis, John M.},
  journal =	 {Phys. Rev. A},
  volume =	 81,
  number =	 1,
  pages =	 012320,
  numpages =	 5,
  year =	 2010,
  month =	 {Jan},
  doi =		 {10.1103/PhysRevA.81.012320},
  publisher =	 {American Physical Society},
  annote =	 {There are well-known protocols for performing
                  controlled NOT (CNOT) quantum logic with qubits
                  coupled by particular high-symmetry (Ising or
                  Heisenberg) interactions. However, many
                  architectures being considered for quantum
                  computation involve qubits or qubits and resonators
                  coupled by more complicated and less symmetric
                  interactions. Here we consider a widely applicable
                  model of weakly but otherwise arbitrarily coupled
                  two-level systems, and use quantum gate design
                  techniques to derive a simple and intuitive CNOT
                  construction. Useful variations and extensions of
                  the solution are given for common special cases.}
}

@article{Pinto-tuneable-2010,
  author =	 {Pinto, Ricardo A. and Korotkov, Alexander N. and
                  Geller, Michael R. and Shumeiko, Vitaly S. and
                  Martinis, John M.},
  title =	 {Analysis of a tunable coupler for superconducting
                  phase qubits},
  journal =	 {Phys. Rev. B},
  url =		 {http://link.aps.org/doi/10.1103/PhysRevB.82.104522},
  year =	 {2010},
  pages =	 {104522},
  numpages =	 {11},
  volume =	 {82},
  doi =		 {10.1103/PhysRevB.82.104522},
  annote =	 {This paper presents a theoretical analysis of the
                  recently realized tuneable coupler for
                  superconducting phase qubits (R. C. Bialczak et al.,
                  Ref.\ \protect\onlinecite{Bialczak}). The coupling
                  can be turned off by compensating a negative mutual
                  inductance with a tuneable Josephson inductance. The
                  main coupling in this system is of the $XX$ type and
                  can be zeroed exactly, while there is also a small
                  undesired contribution of the $ZZ$ type. We
                  calculate both couplings as functions of the tuning
                  parameter (bias current) and focus on the residual
                  coupling in the OFF regime. In particular, we show
                  that for typical experimental parameters the
                  coupling OFF/ON ratio is few times $10^{-3}$, and it
                  may be zeroed by proper choice of parameters. The
                  remaining errors due to physical presence of the
                  coupler are on the order of $10^{-6}$.}
}

@Unpublished{Galiautdinov-Korotkov-Martinis-2011,
