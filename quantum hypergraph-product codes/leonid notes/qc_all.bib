@Article{Byrd-2003,
  author =	 {Mark S. Byrd and Daniel A. Lidar},
  title =	 {Combined error correction techniques for quantum
                  computing architectures},
  journal =	 {J. of Modern Opt.},
  year =	 2003,
  volume =	 50,
  pages =	 1285, doi={10.1080/0950034021000011428},
  url ="http://www.chem.utoronto.ca/staff/dlidar/JMO50.8.1285.2003.pdf",
  annote =	 {Proposals for
