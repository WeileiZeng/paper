  title =	 {Resonator/zero-Qubit architecture for
                  superconducting qubits},
  note =	 {arXiv:1105.3997},
  OPTkey =	 {},
  OPTmonth =	 {},
  OPTyear =	 {2011},
  OPTannote =	 { We analyze the performance of the
                  Resonator/zero-Qubit (RezQu) architecture in which
                  the qubits are complemented with memory resonators
                  and coupled via a resonator bus. Separating the
                  stored information from the rest of the processing
                  circuit by at least two coupling steps results in a
                  significant increase of the ON/OFF ratio and the
                  reduction of the idling error. Here we calculate
                  such idling error, as well as the errors for
                  tunneling measurement and the SWAP/MOVE operation,
                  and show that the RezQu architecture can provide
                  high fidelity performance required for quantum
                  information processing.}
}

@article{Martinis-44us-qubit-2013,
